{
  "title": "Î» - A Snap! Autograder",
  "description": "An autograder for the Snap! programming language, my UC Berkeley Masters' Thesis.",
  "styles": {
      "website": "styles/website.css",
      "ebook": "styles/ebook.css",
      "pdf": "styles/pdf.css",
      "mobi": "styles/mobi.css",
      "epub": "styles/epub.css"
  },
  "plugins": [
    "bibtex-citation",
    {
        "name": "image-captions",
        "version": "git+https://github.com/todvora/gitbook-plugin-image-captions.git"
    }
  ],
  "pluginsConfig": {
    "bibtex": {
      "bibtex-path": "references.bib",
      "references-url": "contents/references.md",
      "format": "acm"
    },
    "image-captions": {
        "variable_name": "figures",
        "caption": "<strong>Figure _BOOK_IMAGE_NUMBER_:</strong> _CAPTION_"
    }
  },
  "pdf": {
      "toc": true,
      "pageNumbers": true,
      "fontSize": 12,
      "fontFamily": "Times",
      "paperSize": "letter",
      "chapterMark" : "pagebreak",
      "pageBreaksBefore": "/",
      "margin": {
          "right": 62,
          "left": 62,
          "top": 56,
          "bottom": 56
      },
      "headerTemplate": null,
      "footerTemplate": null
  }
}
